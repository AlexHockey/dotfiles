[user]
	name = Alex Hockey
	email = alex.hockey@metaswitch.com
[color]
	ui = true
[push]
	default = simple
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
	smup = !git submodule update --init --recursive
  graph = !git log --graph --decorate
[merge]
	conflictstyle = diff3
[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
[status]
[log]
  decorate = short
[push]
  ff = only
